<body>
  <main class="main-content" role="main">
    <section class="section-login section-height d-flex align-items-center">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-md-9 col-lg-7 col-xl-5">
            <div class="items-login wb-rounded">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <h1 class="h3 mb-3 font-weight-normal text-center">Please Sign Up</h1>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="form-group form-group-label pt-2" id="resume-name">
                  <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First Name" %>
                  <label for="resume-name">
                    First Name
                  </label>
                </div>
              
                <div class="form-group form-group-label" id="resume-name">
                  <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Last Name" %>
                  
                  <label for="resume-name">
                    Last Name
                  </label>
                </div>

                <div class="form-group form-group-label" id="resume-name">
                  <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
                  <label for="resume-name">
                    Email Address
                  </label>
                </div>

                <div class="form-group form-group-label" id="resume-name">
                  
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
                  <label for="resume-name">
                    Password
                  </label>
                </div>

                <div class="form-group form-group-label" id="resume-name">
                  
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation" %>
                  <label for="resume-name">
                    Password Confirmation
                  </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
              <% end %> 
            </div>
          </div>
        </div>
      </div>
    </section> 
  </main>
  <%= render "devise/shared/links" %>
</body>
                



              
