<div class="form-group">

  <div class="col-12 col-sm-6">
      <%= f.text_field :date_from, class: 'ever-inputs form-control datetimepicker', placeholder: 'Date from' %>
      <%= f.text_field :date_to, class: 'ever-inputs form-control datetimepicker', placeholder: 'Date to' %>
  </div>

  <div class="col-12 col-sm-6">
    <%= f.text_field :client, class: 'ever-inputs form-control', placeholder: 'Client'  %>
    <%= f.text_field :role, class: 'ever-inputs form-control', placeholder: 'Role in project'  %>
  </div>

  <div class="col-md-6">
    <%= f.text_area :description, class: 'ever-inputs form-control', placeholder: 'Project description' %>
  </div>

  <div class="col-md-6">
    <%= f.text_area :technologies, class: 'ever-inputs form-control', placeholder: 'Used technologies' %>
    <%= link_to_remove_association 'remove', f, class: 'btn btn-danger btn-xs pull-right title' %>
  </div>

  <hr class="col-md-10 col-md-offset-1">

</div>